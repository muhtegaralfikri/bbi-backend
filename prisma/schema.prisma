// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // Diambil dari file .env
}

// 1. Tabel Admins
model Admin {
  id                  String    @id @default(uuid())
  nama_lengkap        String
  email               String    @unique
  password_hash       String
  reset_token         String? // ? berarti nullable
  reset_token_expires DateTime?

  // Relasi: Satu admin bisa menulis banyak berita
  berita              Berita[]

  created_at          DateTime  @default(now())

  @@map("admins") // Nama tabel di database
}

// 2. Tabel Berita
model Berita {
  id               String   @id @default(uuid())
  judul            String
  judul_en         String?
  slug             String   @unique
  ringkasan        String   @db.Text
  ringkasan_en     String?  @db.Text
  isi_konten       String   @db.Text // Simpan sebagai HTML atau Markdown
  isi_konten_en    String?  @db.Text
  gambar_utama_url String
  status           String   @default("draft") // "draft" atau "published"
  published_at     DateTime?

  // Relasi: Satu berita ditulis oleh satu admin
  penulis    Admin  @relation(fields: [penulis_id], references: [id])
  penulis_id String // Foreign Key

  // Relasi: Satu berita punya banyak galeri
  galeri   GaleriBerita[]

  // Relasi: Satu berita punya banyak komentar
  komentar KomentarBerita[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([status, published_at(sort: Desc)])
  @@index([slug])
  @@index([status])
  @@map("berita")
}

// 3. Tabel Galeri Berita
model GaleriBerita {
  id          String  @id @default(uuid())
  gambar_url  String
  keterangan  String?

  // Relasi: Galeri ini milik satu berita
  berita    Berita @relation(fields: [berita_id], references: [id], onDelete: Cascade) // Jika berita dihapus, galeri ikut terhapus
  berita_id String // Foreign Key

  @@map("galeri_berita")
}

// 4. Tabel Info Perusahaan (Singleton)
model InfoPerusahaan {
  id                  Int    @id @default(1) // Hanya ada 1 baris
  alamat_kantor       String @db.Text
  no_hp               String
  email               String
  google_maps_embed String @db.Text

  @@map("info_perusahaan")
}

// 5. Tabel Komentar Berita Publik
model KomentarBerita {
  id          String   @id @default(uuid())
  nama        String
  email       String
  isi         String   @db.Text
  status      String   @default("pending") // pending | approved | rejected
  created_at  DateTime @default(now())
  approved_at DateTime?

  berita    Berita @relation(fields: [berita_id], references: [id], onDelete: Cascade)
  berita_id String

  @@index([status, created_at(sort: Desc)])
  @@index([berita_id])
  @@map("komentar_berita")
}

// 6. Tabel Info Cabang
model InfoCabang {
  id                String   @id @default(uuid())
  nama_cabang       String
  alamat            String   @db.Text
  no_telepon        String?
  google_maps_embed String   @db.Text
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  @@map("info_cabang")
}
